!!!
%html
  %head
    %title Front
    = stylesheet_link_tag 'application'
    = csrf_meta_tag
    = javascript_include_tag :application
%body
  .navbar
    .navbar-inner
      .container
        .row
          .span8
            %a.title.brand(href="/") Delayo
  .container
    - if flash[:notice]
      .alert.alert-success
        = flash[:notice]
    - if flash[:error]
      .alert.alert-error
        = flash[:error]

    = yield
