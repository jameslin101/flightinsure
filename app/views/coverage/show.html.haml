%h3
  Please review your order:
.row  
  %table.table.table-striped.table-bordered.span10
    %thead
      %tr
        %th.span1
          Premium
        %th.span3
          Your flights:
        %th.span1
          1 to 2 hrs
        %th.span1
          2 to 3 hrs
        %th.span1
          3 to 4 hrs
        %th.span1
          4+ hrs
        %th.span1
          Cancellation/<br>Diversion
    %tbody
      -@coverage.flight_coverages.each do |fc|
        %tr
          %td
            = number_to_currency(fc.premium)
          %td
            =render "flight_leg_print", :l=>fc.flight_leg
          %td
            = number_to_currency(fc.c60_120)
          %td
            = number_to_currency(fc.c120_180)
          %td
            = number_to_currency(fc.c180_240)
          %td
            = number_to_currency(fc.c240_or_more)
          %td
            = number_to_currency(fc.cc)
.row
  .span12
    %h4
      Your total:
      = number_to_currency(@coverage.total_premium)
%p
-if user_signed_in?
  / -user.email
-else
  %h3
    Sign up
  /  =raise current_user.inspect
  / = form_for(current_user) do |f|
  /   = devise_error_messages! 
  /   .div
  /     = f.label :email 
  /     = f.email_field :email
  /   .div
  /     = f.label :password 
  /     <br />
  /     = f.password_field :password
  /   .div
  /     = f.label :password_confirmation
  /     <br />
  /     = f.password_field :password_confirmation
  / 
  /   = f.submit "Sign up"

  
